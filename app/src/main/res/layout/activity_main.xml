<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/dangnhap" />
    <TextView
        android:id="@+id/txt_tieude"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý thu chi"
        android:textSize="30dp"
        android:textColor="#f00"
        android:gravity="center"
        android:layout_below="@+id/img_icon"
        />

    <EditText
        android:id="@+id/edt_username"
        android:layout_width="fill_parent"
        android:hint="User Name"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/txt_tieude"

        />

    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/edt_username"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu"
        android:layout_below="@+id/edt_pass"
        android:gravity="center"
        android:textColor="#f00"
        android:textSize="15dp"
        />
    <Button
        android:id="@+id/btn_dangnhap"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/edt_pass"
        android:text="Đăng nhập"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        />
    <Button
        android:id="@+id/btn_dangky"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/edt_pass"
        android:layout_toRightOf="@+id/btn_dangnhap"
        android:layout_marginTop="100dp"
        android:text="Đăng ký"
        android:textSize="20dp"

        />



</RelativeLayout>